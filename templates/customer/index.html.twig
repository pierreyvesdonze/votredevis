{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
<div class="flex-center-section">

    <h1>Clients</h1>

    <br>

    {# SEARCH #}
    {% include('search/_search.html.twig') %}

    <br>

    {% for customer in customers %}
    <div class="main-row">
        <h5>{{ customer.companyName }}
            <div class="main-control">
                <div>
                    <a href="{{ path('customer_show', {'id': customer.id}) }}" class="custom-btn">Voir
                    </a>
                </div>
                <div>

                    <a href="{{ path('customer_edit', {'id': customer.id}) }}" class="custom-btn">Modifier</a>
                </div>
                <div>
                    {{ include('customer/_delete_form.html.twig') }}
                </div>
            </div>

            <br>
            {% else %}
            <div>
                Aucun client trouvé
            </div>
    </div>
    {% endfor %}

    <a href="{{ path('customer_new') }}" class="custom-btn">Créer un client</a>
</div>
{% endblock %}