{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
<div class="flex-center-section">
    <h1>Devis du client {{ customer.companyName }}</h1>
    <br>
    {# SEARCH #}
    {% include('search/_search.html.twig') %}

    <br>
    <div class="main-border-content">
        {% for estimate in estimates %}
        <div class="main-row estimate-line">
            <h3>{{ estimate.title }}</h3>
            <div class="main-control">
                <div>
                    <a href="{{ path('estimate', {'id': estimate.id}) }}" class="custom-btn">
                        <img src="{{ asset('assets/icons/show.png') }}">
                    </a>
                </div>
                <div>
                    <a href="{{ path('estimate_edit', {'id': estimate.id}) }}" class="custom-btn">
                        <img src="{{ asset('assets/icons/edit.png') }}">
                    </a>
                </div>
                {# <div>
                    {{ include('estimate/_delete_form.html.twig') }}
                </div> #}
            </div>
        </div>

        <br>
        {% else %}
        <div>
            Aucun devis trouv√©
        </div>
    </div>
    {% endfor %}
</div>
<br>
<div class="footer-nav">
    <div class="d-flex justify-content-center
    ">
        <a href="{{ path('customer_show', {'id':customer.id}) }}" class="custom-btn">Retour au client</a>
    </div>
</div>
{% endblock %}