{% extends 'base.html.twig' %}

{% block title %}Devis{% endblock %}

{% block body %}
<section class="menu">
    {% for estimate in estimates %}
    <div class="menu-item">
        <a href="{{ path('estimate', {'id' : estimate.id }) }}" id="menu-item-title">
            {{ estimate.title }} - {{ estimate.date|date('d/m/y')}}
        </a>
        <a href="{{ path('estimate_edit', {"id": estimate.id}) }}" class="custom-btn">Modifier</a>
        <a href="{{ path('estimate_delete', {'id': estimate.id}) }}" onclick="return confirm('Supprimer ce devis ?')" class="custom-btn">Supprimer</a>
    </div>
    {% endfor %}
    <hr class="hr">
    <a href="{{ path('home') }}" class="custom-btn">Retour</a>
</section>
{% endblock %}