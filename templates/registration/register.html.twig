{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="flex-center-section">
    <div class="main-border-content">
        <h1>S'enregistrer</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.companyName) }}
        {{ form_row(registrationForm.street) }}
        {{ form_row(registrationForm.postal) }}
        {{ form_row(registrationForm.town) }}
        {{ form_row(registrationForm.siret) }}

        <button type="submit" class="custom-btn">Enregistrement</button>
        {{ form_end(registrationForm) }}
    </div>
</div>

{% endblock %}